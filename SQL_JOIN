create table City(
        id serial primary key,
        city_name varchar(40) unique not null
);       

create table Person(
        id serial primary key,
        person_name varchar(40),
        city_id int not null
);

insert into City(city_name)
values ('Antalya'),
       ('Berlin'),
       ('Paris'),
       ('Atlanta');

insert into Person(person_name, city_id)
values ('Vadim', 2),
       ('Anna', 1),
       ('Vika', 3),
       ('Sergey', 5);

